<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rel_lay_spinnertime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     >

        <TextView
            android:id="@+id/t01"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/spinner_time_prompt"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:prompt="@string/spinner_time_prompt"
            android:spinnerMode="dropdown"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="minutes"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_lay_spinnerfreq"
        android:layout_below="@+id/rel_lay_spinnertime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     >

        <TextView
            android:id="@+id/t02"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/spinner_interval_prompt"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Spinner
            android:id="@+id/spinner_interval"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:prompt="@string/spinner_interval_prompt"
            android:spinnerMode="dropdown"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="second"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_stopped"
        android:id="@+id/btnService"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/statusText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>